<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class="ReceivedMessageBinding">

        <import
            alias="V"
            type="android.view.View" />

        <variable
            name="message"
            type="com.komandor.komandor.ui.chat.MessageItemViewModel" />

        <variable
            name="onMessageItemClickListener"
            type="com.komandor.komandor.ui.chat.MessagesAdapter.OnMessageItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> onMessageItemClickListener.onMessageItemClick(message.id, message.hasFile)}"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/message_avatar_size"
            android:layout_height="@dimen/message_avatar_size"
            android:contentDescription="Аватар"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="@{message.isGrouped ? V.INVISIBLE : V.VISIBLE}"
            tools:visibility="invisible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                bind:background="@{message.isGrouped ? @drawable/received_message_group : @drawable/received_message}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{message.message}"
                    tools:text="При открытии в заголовке вместо Командор - Сообщение" />
            </LinearLayout>

            <TextView
                android:id="@+id/messageItemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{message.date}"
                android:textAppearance="@style/AppTheme.TextAppearance.ListItemSecondaryText.VerySmall"
                tools:text="9:20" />
        </LinearLayout>

    </LinearLayout>
</layout>