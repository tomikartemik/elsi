<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class="SentMessageBinding">

        <import
            alias="V"
            type="android.view.View" />

        <variable
            name="message"
            type="com.komandor.komandor.ui.chat.MessageItemViewModel" />

        <variable
            name="onMessageItemClickListener"
            type="com.komandor.komandor.ui.chat.MessagesAdapter.OnMessageItemClickListener" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:onClick="@{() -> onMessageItemClickListener.onMessageItemClick(message.id, message.hasFile)}"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_clock_24px"
                android:visibility="@{message.isSent ? V.INVISIBLE : V.VISIBLE}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@{message.date}"
                android:textAppearance="@style/AppTheme.TextAppearance.ListItemSecondaryText.VerySmall"
                tools:text="9:20" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                bind:background="@{message.isGrouped ? @drawable/sent_message_group : @drawable/sent_message}"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{message.message}"
                    tools:text="Сообщение" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>